@model IEnumerable<KerazaWebApplication.Models.Category>


<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px; visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
    <h1 class="mb-3">Categories</h1>
    <p>Eirmod sed ipsum dolor sit rebum labore magna erat. Tempor ut dolore lorem kasd vero ipsum sit eirmod sit. Ipsum diam justo sed rebum vero dolor duo.</p>
</div>

<div class="row">


    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;">
            <div class="bg-light rounded p-3">
                <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Categories" class="d-flex align-items-center justify-content-center bg-white rounded p-3" style="border: 1px dashed #2AA8D8">
                    <span class="p-2" style="text-align:center"><b>@item.Name</b></span>
                </a>
            </div>
        </div>
    }
    <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;">
        <div class="bg-light rounded p-3">
            <a asp-action="create" asp-controller="Categories" class="d-flex align-items-center justify-content-center bg-white rounded p-3" style="border: 1px dashed #2AA8D8">
                <i style="color:#2AA8D8 !important" class=" fa fa-plus text-primary"></i>
                <span class="p-2" style="text-align:center"><b>Add new Category</b></span>
            </a>
        </div>
    </div>
</div>

