@model KerazaWebApplication.ViewModel.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T6c50a37A0C9IxU/xwO0qH9jem+9XO0PxPg6fz4/olvSkyGin8+RvKX4dwvQhaQ7Vj/1" crossorigin="anonymous">
<div class="container-fluid">
    <!-- Header Start -->
    <div class="container-fluid header bg-white p-0">
        <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
            <div class="col-md-6 p-5 mt-lg-5">
                <h1 class="display-5 animated fadeIn mb-4">"Your word is a <span class="text-primary">Lamp</span> to my feet and a<span class="text-primary"> Light</span> to my path."</h1>
                <h3 class="display-10 animated fadeIn mb-4"> Psalm 119:105 </h3>
                <p class="animated fadeIn mb-4 pb-2">
                    St Paul service was born 2008, it’s the service of helping the poor countries in Africa and Asia live and enjoy a better life. And to enjoy a better life, We need to work on all aspects of humanity we need to speak to their hearts to their minds and to develop all aspects of life
                </p>
            </div>
            <div class="col-md-6 animated fadeIn">
                <div class="owl-carousel header-carousel">
                    <div class="owl-carousel-item" style="width: 1000px;object-fit: contain;">
                        <img class="img-fluid" src="https://images.unsplash.com/photo-1499652848871-1527a310b13a?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
                    </div>
                    <div class="owl-carousel-item" style="width: 1000px;object-fit: contain;">
                        <img class="img-fluid" src="https://images.unsplash.com/photo-1497621122273-f5cfb6065c56?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <!--Seach Bar-->
    <div class="bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px; visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;">
        <div class="container">
            <form asp-controller="Sermons" asp-action="SermonsSearch" class="row justify-content-center g-2">
                <div class="col-md-4">
                    <input type="text" asp-for="searchWord" class="form-control border-0 py-3" placeholder="Search Keyword">
                </div>
                <div class="col-md-4">
                    <select asp-for="SpeakerId" class="form-select border-0 py-3">
                        <option selected value=0>All Speakers</option>
                        @foreach (var item in Model.Speakers)
                        {
                            <option value="@item.Id">@item.Name (@item.Sermons.Count())</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <select asp-for="CategoryId" class="form-select border-0 py-3">
                        <option selected value=0>All Categories</option>
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <select asp-for="TopicId" class="form-select border-0 py-3">
                        <option selected value=0>All Topics</option>
                        @foreach (var item in Model.Topics)
                        {
                            <option value="@item.Id">@item.Name (@item.Sermons.Count())</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <select asp-for="LanguageId" class="form-select border-0 py-3">
                        <option selected value=0>All Languages</option>
                        @foreach (var item in Model.Languages)
                        {
                            <option value="@item.Id">@item.Name (@item.Sermons.Count())</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <select asp-for="EventId" class="form-select border-0 py-3">
                        <option selected value=0>All Events</option>
                        @foreach (var item in Model.Events)
                        {
                            <option value="@item.Id">@item.Name (@item.Sermons.Count())</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <button class="btn btn-dark border-0 w-100 py-3">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
            <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="index" asp-controller="sermons">
                <div style="border: 1px dashed #2AA8D8;" class="rounded p-4">
                    <div class="icon mb-3">
                        <img class="img-fluid" src="img/icon-apartment.png" alt="Icon">
                    </div>
                    <h6>Sermons</h6>
                    <span>@Model.Sermons.Count() Properties</span>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
            <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="showevents" asp-controller="events">
                <div style="border: 1px dashed #2AA8D8;" class="rounded p-4">
                    <div class="icon mb-3">
                        <img class="img-fluid" src="img/icon-villa.png" alt="Icon">
                    </div>
                    <h6>Events</h6>
                    <span>@Model.Events.Count() Events</span>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
            <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="ShowCategories" asp-controller="Categories">
                <div style="border: 1px dashed #2AA8D8;" class="rounded p-4">
                    <div class="icon mb-3">
                        <img class="img-fluid" src="img/icon-house.png" alt="Icon">
                    </div>
                    <h6>Categories</h6>
                    <span>@Model.Categories.Count() Categories</span>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s" style="visibility: visible; animation-delay: 0.7s; animation-name: fadeInUp;">
            <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="ShowTopics" asp-controller="Topics">
                <div style="border: 1px dashed #2AA8D8;" class="rounded p-4">
                    <div class="icon mb-3">
                        <img class="img-fluid" src="img/icon-housing.png" alt="Icon">
                    </div>
                    <h6>Topics</h6>
                    <span>@Model.Topics.Count() Topics</span>
                </div>
            </a>
        </div>
    </div>
    
    <div class="container-xxl">
        <h3>Latest Sermons</h3>
        <div class="row g-4">
            @foreach (var item in Model.Sermons)
            {

                <div class="col-lg-4 col-md-6 d-flex wow fadeIn align-items-stretch" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                    <div class="property-item rounded overflow-hidden border">
                        <div class="position-relative overflow-hidden">
                            <a asp-action="details" asp-controller="Sermons" asp-route-id="@item.Id">
                                <!-- Fixed image size with object-fit: cover to handle different image sizes -->
                                <img class="img-fluid" src="@item.ImageURL" alt="" style="width: 100%; height: 250px; object-fit: cover;">
                            </a>
                            <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@item.Date.ToString("MMMM d")</div>
                            @* <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@item.Topic.Name</div> *@
                        </div>
                        <div class="p-4 pb-2" style="height: auto;">
                            <a asp-controller="Sermons" asp-action="details" asp-route-id="@item.Id"><h5 class="text-primary arabicText mb-3">@item.Title_ar</h5></a>
                            <a asp-controller="Sermons" asp-action="details" asp-route-id="@item.Id"><h5 class="d-block mb-2">@item.Title_en</h5></a>
                            <hr />
                            <div class="d-flex flex-wrap">
                                <div class="pe-2"><strong>Category:</strong> <a asp-controller="sermons" asp-action="index" asp-route-filter="category" asp-route-id="@item.Event.CategoryId">@item.Event.Category.Name</a></div>
                                <div class="pe-2"><strong>Topic:</strong> <a asp-controller="sermons" asp-action="index" asp-route-filter="topic" asp-route-id="@item.TopicId">@item.Topic.Name</a></div>
                                <div class="pe-2"><strong>Event:</strong> <a asp-controller="sermons" asp-action="index" asp-route-filter="event" asp-route-id="@item.EventId">@item.Event.Name</a></div>

                            </div>
                            <hr />
                            <a asp-action="index" asp-controller="Sermons" asp-route-filter="speaker" asp-route-id="@item.SpeakerId">
                            <div class="d-flex mb-2">
                                    <div class="d-flex align-items-center">
                                        <!-- Avatar Image -->
                                        <img src="@item.Speaker.ImageURL" alt="Avatar" class="avatar me-2">
                                        <!-- User Name -->
                                        <div>
                                            <strong>@item.Speaker.Name</strong>
                                        </div>
                                    </div>
                            </div>
                            </a>
                        </div>
                    </div>
                </div>
            }
            <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                <a class="btn btn-primary py-3 px-5" href="">Browse More Sermons</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px; visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
            <h1 class="mb-3">Speakers</h1>
            <p>Eirmod sed ipsum dolor sit rebum labore magna erat. Tempor ut dolore lorem kasd vero ipsum sit eirmod sit. Ipsum diam justo sed rebum vero dolor duo.</p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model.Speakers)
            {

                <a href="@Url.Action("Index", "sermons", new { filter = "Speaker", id = item.Id })" class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                    <div class="team-item rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src=" https://i1.sndcdn.com/artworks-000049714687-5s5d7v-t500x500.jpg" @* src=" https://i1.sndcdn.com/artworks-000049714687-5s5d7v-t500x500.jpg https://drive.google.com/thumbnail?id=@item.ImageURL  " *@ style="width: 100%; height: 250px; object-fit: cover" alt="">
                            <div class="position-absolute start-50 top-100 translate-middle d-flex align-items-center">
                            </div>
                        </div>
                        <div class="text-center p-4 mt-3">
                            <h5 class="fw-bold mb-0">@item.Name</h5>
                        </div>
                    </div>
                </a>

            }
        </div>

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6ZYgfuA2AEnnhx27B1ml+wbXYZVrk/p0U9pQ9jnW8Qab9QywlAtHo8YLsn1QqBa8" crossorigin="anonymous"></script>



<style>
    .avatar {
        width: 50px; 
        height: 50px;
        border-radius: 50%; 
        object-fit: cover; 
        border: 2px dashed #2AA8D8; 
        padding: 2px;
    }

</style>